FROM node:10-alpine

WORKDIR /app

ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

COPY package.json yarn.lock /app/
COPY ./packages/env /app/packages/env

RUN yarn --production --frozen-lockfile --no-cache

COPY ./packages/app/next.config.js /app/
COPY ./packages/app//public/ /app/public
COPY ./packages/app/.next /app/.next
COPY ./packages/app/dist /app/dist

ENTRYPOINT ["yarn", "start"]